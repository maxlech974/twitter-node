script(src="/javascripts/profile.js")
div(class="profil-container bg-white me-3 d-flex flex-column")
    form(id="form-container" class="d-flex flex-row justify-content-center align-items-center" method="post" enc="multipart/form-data" action="/users/update/image")
        input(type="file" name="avatar" class="d-none" id="input-avatar")
        img(src=currentUser.avatar class="img-fluid" id="image-profile")
    div(class="d-flex flex-row justify-content-center align-items-center my-3")
        p= `${currentUser.username} ${currentUser.local.email}`
    div(class="d-flex text-center flex-row justify-content-center align-items-center my-3")
        div(class="flex-fill")
            p
                strong Tweet 
                br
                span(class="text-primary")= tweets.length
        div(class="flex-fill")
            p 
                strong Following
                br
                span(class="text-primary") -